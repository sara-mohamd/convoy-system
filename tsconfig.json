{
  "compilerOptions": {
    "target": "ES2015",
    "module": "nodenext", // Add this line
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "baseUrl": "./",
  "include": [
    "src/**/*"
  ]
}